@using System.Security.Claims

@if (User.Identity?.IsAuthenticated == true)
{
    // Si el usuario está autenticado, muestra su email y un botón de Logout
    <li class="nav-item">
        <span class="nav-link text-dark">Hello, @User.FindFirst(ClaimTypes.Email)?.Value!</span>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/Logout">Logout</a>
    </li>
}
else
{
    // Si el usuario NO está autenticado, muestra solo el botón de Login
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Login</a>
    </li>
}
