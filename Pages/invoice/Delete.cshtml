@page
@model SupermarketWEB.Pages.Invoices.DeleteModel
@{
    ViewData["Title"] = "Delete Invoice";
}

<h1>Delete Invoice</h1>

<h3>Are you sure you want to delete this invoice?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Invoice Number</dt>
        <dd class="col-sm-10">@Model.Invoice.InvoiceNumber</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Invoice.InvoiceDate.ToShortDateString()</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Invoice.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>