@page
@model SupermarketWEB.Pages.Invoices.EditModel
@{
    ViewData["Title"] = "Edit Invoice";
}

<h1>Edit Invoice</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Invoice.Id" />

            <div class="form-group mb-3">
                <label asp-for="Invoice.InvoiceNumber" class="control-label">Invoice Number</label>
                <input asp-for="Invoice.InvoiceNumber" class="form-control" />
                <span asp-validation-for="Invoice.InvoiceNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Invoice.InvoiceDate" class="control-label">Date</label>
                <input asp-for="Invoice.InvoiceDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="Invoice.InvoiceDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
