@page
@model SupermarketWEB.Pages.PayModes.EditModel
@{
    ViewData["Title"] = "Edit Payment Method";
}

<h1>Edit Payment Method</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="PayMode.Id" />

            <div class="form-group mb-3">
                <label asp-for="PayMode.Name" class="control-label"></label>
                <input asp-for="PayMode.Name" class="form-control" />
                <span asp-validation-for="PayMode.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PayMode.Description" class="control-label"></label>
                <textarea asp-for="PayMode.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="PayMode.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
